<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/serviceBut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:layout_marginStart="10dp"
        android:text="Service" />

    <Button
        android:id="@+id/sarjButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sarj Seviye"
        app:layout_constraintStart_toEndOf="@id/serviceBut"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/serviceBut" />

    <Button
        android:id="@+id/ucakmoduButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/sarjButton"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/sarjButton"
        android:text="Ucak Modu" />

    <Button
        android:id="@+id/bildirimButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/serviceBut"
        android:layout_marginTop="20dp"
        android:text="Bildirim" />

    <Button
        android:id="@+id/sayiciButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CountDownTimer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bildirimButton"
        android:layout_marginTop="200dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>