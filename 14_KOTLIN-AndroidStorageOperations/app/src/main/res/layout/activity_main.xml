<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android Depolama Islemleri"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/b1"
        android:layout_width="70dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text1"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:text="1"
        android:backgroundTint="@android:color/holo_purple"/>


    <Button
        android:id="@+id/b2"
        android:layout_width="70dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toEndOf="@+id/b1"
        app:layout_constraintTop_toBottomOf="@+id/text1"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:text="2"
        android:backgroundTint="@android:color/holo_purple"/>

    <Button
        android:id="@+id/b3"
        android:layout_width="70dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toEndOf="@+id/b2"
        app:layout_constraintTop_toBottomOf="@+id/text1"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:text="3"
        android:backgroundTint="@android:color/holo_purple"/>

    <Button
        android:id="@+id/b4"
        android:layout_width="70dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toEndOf="@+id/b3"
        app:layout_constraintTop_toBottomOf="@+id/text1"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:text="4"
        android:backgroundTint="@android:color/holo_purple"/>

    <Button
        android:id="@+id/b5"
        android:layout_width="70dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="@+id/b1"
        app:layout_constraintTop_toBottomOf="@+id/b1"
        android:layout_marginTop="15dp"
        android:text="5"
        android:backgroundTint="@android:color/holo_purple"/>

    <Button
        android:id="@+id/b6"
        android:layout_width="70dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="@+id/b2"
        app:layout_constraintTop_toBottomOf="@+id/b2"
        android:layout_marginTop="15dp"
        android:text="6"
        android:backgroundTint="@android:color/holo_purple"/>

    <Button
        android:id="@+id/b7"
        android:layout_width="70dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="@+id/b3"
        app:layout_constraintTop_toBottomOf="@+id/b2"
        android:layout_marginTop="15dp"
        android:text="7"
        android:backgroundTint="@android:color/holo_purple"/>

    <Button
        android:id="@+id/b8"
        android:layout_width="70dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toEndOf="@+id/b3"
        app:layout_constraintTop_toBottomOf="@+id/b4"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:text="8"
        android:backgroundTint="@android:color/holo_purple"/>


</androidx.constraintlayout.widget.ConstraintLayout>