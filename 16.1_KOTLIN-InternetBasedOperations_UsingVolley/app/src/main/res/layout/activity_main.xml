<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/veriOkuyucu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Veri Giriniz" />

    <Button
        android:id="@+id/veriEkleme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/veriOkuyucu"
        app:layout_constraintEnd_toEndOf="@id/veriOkuyucu"
        app:layout_constraintTop_toBottomOf="@id/veriOkuyucu"
        android:layout_marginTop="50dp"
        android:text="INSERT(V.Ekleme)" />

    <Button
        android:id="@+id/veriGuncelleme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/veriOkuyucu"
        app:layout_constraintEnd_toEndOf="@id/veriOkuyucu"
        app:layout_constraintTop_toBottomOf="@id/veriEkleme"
        android:layout_marginTop="20dp"
        android:text="UPDATE(V.Guncelleme)" />

    <Button
        android:id="@+id/veriOkuma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/veriOkuyucu"
        app:layout_constraintEnd_toEndOf="@id/veriOkuyucu"
        app:layout_constraintTop_toBottomOf="@id/veriGuncelleme"
        android:layout_marginTop="20dp"
        android:text="SELECT(V.Okuma)" />

    <Button
        android:id="@+id/veriSilme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/veriOkuyucu"
        app:layout_constraintEnd_toEndOf="@id/veriOkuyucu"
        app:layout_constraintTop_toBottomOf="@id/veriOkuma"
        android:layout_marginTop="20dp"
        android:text="DELETE(V.Silme" />

    <TextView
        android:id="@+id/sonuclarKismi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="100dp"
        android:textColor="@color/black"
        android:text="" />
</androidx.constraintlayout.widget.ConstraintLayout>