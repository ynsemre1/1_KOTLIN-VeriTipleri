<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuOlusturma.MenuOlusturma">

    <TextView
        android:id="@+id/menuOlusturma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_olusturma"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/buttonMenuAc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_ac"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menuOlusturma"
        android:layout_marginTop="50dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>